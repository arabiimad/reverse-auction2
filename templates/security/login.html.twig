{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-10 p-6 bg-white rounded shadow">
        <h1 class="text-xl font-bold mb-4">Connexion</h1>

        {% if error %}
            <div class="text-red-600 mb-4">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form method="post">
            <label for="username" class="block mb-1 font-medium">Email</label>
            <input type="text" name="_username" id="username" class="w-full border rounded px-3 py-2 mb-4" value="{{ last_username }}" required autofocus>

            <label for="password" class="block mb-1 font-medium">Mot de passe</label>
            <input type="password" name="_password" id="password" class="w-full border rounded px-3 py-2 mb-4" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Se connecter</button>
            <a href="{{ path('app_register') }}" class="inline-block ml-4 text-sm text-blue-700 hover:underline">S'inscrire</a>
        </form>
    </div>
{% endblock %}
