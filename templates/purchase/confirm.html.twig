{% extends 'base.html.twig' %}

{% block title %}Confirmation d’achat{% endblock %}

{% block body %}
<h1 class="text-xl font-bold mb-4">Confirmation</h1>

<p class="mb-6">
    Vous allez acheter <strong>{{ pack.tokens }}</strong> jetons pour
    <strong>{{ pack.priceCents / 100 }} €</strong>.
</p>

<form method="POST" action="{{ path('purchase_validate') }}" class="space-y-4">
    <input type="hidden" name="_token" value="{{ csrf_token('purchase_item') }}">
    <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded shadow">
        Confirmer l’achat
    </button>
    <a href="{{ path('purchase_choose') }}" class="ml-4 text-gray-600 hover:underline">
        Annuler
    </a>
</form>
{% endblock %}
